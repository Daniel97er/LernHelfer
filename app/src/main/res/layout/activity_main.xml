<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Zentrierter Text -->
    <TextView
        android:id="@+id/centeredText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Wirtschaft"
        android:textColor="#5CC8E6"
        android:textSize="20sp" />

    <!-- Erste Liste -->
    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/centeredText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#5CC8E6" />

    <!-- Text Ã¼ber der zweiten Liste -->
    <TextView
        android:id="@+id/aboveSecondListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Chemie"
        android:textColor="#37E121"
        android:textSize="20sp" />

    <!-- Zweite Liste -->
    <ListView
        android:id="@+id/listview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboveSecondListText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#37E121" />
</RelativeLayout>