<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90EE90">

    <!-- Text "Stoffmenge" -->
    <TextView
        android:id="@+id/textStoffmenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Stoffmenge"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Eingabefeld für Masse -->
    <EditText
        android:id="@+id/editMasse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textStoffmenge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:hint="Masse" />

    <!-- Eingabefeld Molmasse -->
    <EditText
        android:id="@+id/editMolmasse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMasse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:hint="Molmasse" />

    <!-- Berechnen Button -->
    <Button
        android:id="@+id/buttonBerechnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMolmasse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Berechnen" />

    <!-- Ausgabefeld 1 -->
    <TextView
        android:id="@+id/textAusgabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonBerechnen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="..."
        android:textSize="18sp"
        android:textStyle="bold" />


    <!-- Formel und Erklärung -->
    <TextView
        android:id="@+id/formel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAusgabe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Stoffmenge = Masse / Molmasse"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textMadeBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Made by D.S."
        android:textSize="23sp"
        android:textStyle="italic" />

</RelativeLayout>