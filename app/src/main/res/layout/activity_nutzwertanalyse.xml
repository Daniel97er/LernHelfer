<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/num_criteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Anzahl der Kriterien"
        android:inputType="number" />

    <EditText
        android:id="@+id/criteria_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kriterien (Name,Gewicht;Name,Gewicht;...)" />

    <EditText
        android:id="@+id/num_alternatives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Anzahl der Alternativen"
        android:inputType="number" />

    <EditText
        android:id="@+id/alternatives_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alternativen (Name,Score1,Score2,...;Name,Score1,Score2,...)" />

    <Button
        android:id="@+id/perform_analysis_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analyse durchfÃ¼hren" />

    <TextView
        android:id="@+id/results_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ergebnisse"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

</LinearLayout>